{{#bs-form model=this onSubmit=(action submitAction) as |form|}}
  {{#bs-tab as |tab|}}
    {{#tab.pane title="Edit"}}
      {{form.element controlType="text" label="Title" placeholder="Title" property="title" id="page-edit-title"}}
      {{form.element controlType="text" label="Url" placeholder="Url" property="url" id="page-edit-url"}}
      {{form.element controlType="textarea" label="Content" placeholder="..." property="contents"
                        id="page-edit-contents"}}
      {{bs-button defaultText="Submit" type="default" buttonType="submit" id="page-edit-submit"}}
    {{/tab.pane}}
    {{#tab.pane title="Preview"}}
      {{page-display page=newpage isPreview=true}}
      {{bs-button defaultText="Submit" type="default" buttonType="submit"}}
    {{/tab.pane}}
  {{/bs-tab}}
{{/bs-form}}
{{yield}}
