{{#bs-form model=this onSubmit=(action submitAction) as |form|}}
  {{#bs-tab as |tab|}}
    {{#tab.pane title="Edit"}}
      {{form.element controlType="text" label="Title" placeholder="Title" property="title" id="post-edit-title"}}
      {{form.element controlType="textarea" label="Content" placeholder="..." property="contents"
                        id="post-edit-contents"}}
      {{bs-button defaultText="Submit" type="default" buttonType="submit" id="post-edit-submit"}}
    {{/tab.pane}}
    {{#tab.pane title="Preview"}}
      {{post-display post=newpost isPreview=true}}
      {{bs-button defaultText="Submit" type="default" buttonType="submit"}}
    {{/tab.pane}}
  {{/bs-tab}}
{{/bs-form}}
{{yield}}
<br>
