{{#bs-form model=this action=(action submitAction)}}
  {{#bs-tab}}
    {{#bs-tab-pane title="Edit"}}
      {{bs-form-element controlType="text" label="Title" placeholder="Title" property="title"}}
      {{bs-form-element controlType="textarea" label="Content" placeholder="..." property="contents"}}
      {{bs-button defaultText="Submit" type="default" buttonType="submit"}}
    {{/bs-tab-pane}}
    {{#bs-tab-pane title="Preview"}}
      {{post-display post=newpost isPreview=true}}
      {{bs-button defaultText="Submit" type="default" buttonType="submit"}}
    {{/bs-tab-pane}}
  {{/bs-tab}}
{{/bs-form}}
{{yield}}
