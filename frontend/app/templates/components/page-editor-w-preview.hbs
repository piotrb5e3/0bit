{{#bs-form model=this action=(action submitAction)}}
  {{#bs-tab}}
    {{#bs-tab-pane title="Edit"}}
      {{bs-form-element controlType="text" label="Title" placeholder="Title" property="title" id="page-edit-title"}}
      {{bs-form-element controlType="text" label="Url" placeholder="Url" property="url" id="page-edit-url"}}
      {{bs-form-element controlType="textarea" label="Content" placeholder="..." property="contents"
                        id="page-edit-contents"}}
      {{bs-button defaultText="Submit" type="default" buttonType="submit" id="page-edit-submit"}}
    {{/bs-tab-pane}}
    {{#bs-tab-pane title="Preview"}}
      {{page-display page=newpage isPreview=true}}
      {{bs-button defaultText="Submit" type="default" buttonType="submit"}}
    {{/bs-tab-pane}}
  {{/bs-tab}}
{{/bs-form}}
{{yield}}
<br>
